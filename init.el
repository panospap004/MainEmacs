(defun my/org-auto-tangle ()
  "Automatically tangle the org file if it contains a tangle header."
  (when (and (buffer-file-name)
             (string-suffix-p ".org" (buffer-file-name)))
    (let ((org-confirm-babel-evaluate nil))
      (org-babel-tangle))))

